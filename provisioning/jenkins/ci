pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh './subgraph-isomorphism.sh test'
            }
        }

        stage('Build') {
            steps {
                sh './subgraph-isomorphism.sh build'
            }
        }

        stage('Deploy MapReduce') {
            steps {
                sh './subgraph-isomorphism.sh deploy'
            }
        }
    }

    post {
        always {
            sh "docker system prune -f"
            cleanWs()
        }
    }
}
